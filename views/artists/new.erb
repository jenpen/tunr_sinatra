<h2>Add New Artist</h2>
<form action="/artists" method="post">

<!-- Artist Name -->
  <label for="artist[name]">Artist's Full Name:</label>
    <input name="artist[name]" placeholder="enter full name"/>

<!-- Artist Nationality -->
  <label for="artist[nationality]">Artist's Nationality:</label>
    <input name="artist[nationality]" placeholder="enter nationality"/>

<!-- Artist Picture -->
  <label for="artist[photo_ur]">Add Artist's Picture:</label>
    <input name="artist[photo_url]" placeholder="paste url"/>

  <div class="spacing">
    <button id="submit_new_artist">Submit</button>
  </div>
</form>

