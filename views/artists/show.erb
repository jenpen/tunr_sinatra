<a href="/artists">Back to All Artists</a>

<!-- Display Artist Name -->
<h2><%= @artist.name %></h2>

<!-- Edit/Delete This Artist -->
<div class="spacing">
  <a href="/artists/<%= @artist.id%>/edit">Edit this artist</a>
</div>
<!-- Show Artist Picture -->
<img class="artist_img" src="<%= @artist.photo_url %>"/>

<!-- Artist Nationality -->
<p>Nationality: <%= @artist.nationality %></p>

<form method="post" action="/artists/<%= @artist.id %>">
  <input type="hidden" name="_method" value="delete">
  <input class="button-delete" type="submit" value="Delete <%=@artist.name %>">
</form
